#!/usr/bin/perl -w
#strip any extension, pipe the arguments through xargs
foreach my $file (@ARGV){
    $name=$file~=s/^\.\///;
    open($in,"<",$file) or die "Cannot read: $!";
    open($out,">","ePADD.".$name) or die "Cannot write: $!";
    while (<$in>){
	@f=split(" ");
	if($#f>=1){
		$t=$f[0];
		my $et="";
		if($t=="LOC"){
			$et="Place";
		    }
		elif($t=="PER"){
			$et="Person";
		    }
		elif($et=="ORG"){
			$et="Organisation"
		    }
		    print $out join(" ",@f[1,$#f])." ".$et."\n";
	    }
    }
    close $in;
    close $out;
    print "$file --> ePADD.$file\n";
}